<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText pentru a introduce prefixul -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduceti un prefix"
        android:inputType="text" />

    <!-- Butonul care va lansa cÄƒutarea -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cauta autocomplete" />

    <!-- TextView pentru a vizualiza rezultatele autocomplete -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rezultatele vor aparea aici"
        android:layout_marginTop="20dp"
        android:padding="8dp" />

</LinearLayout>
